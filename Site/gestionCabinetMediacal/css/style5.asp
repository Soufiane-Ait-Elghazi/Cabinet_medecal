.ident{
    margin-top: 10%;
    width: fit-content;
    border-radius: 5px;
    background-color: #f2f2f2;
    padding: 20px;
}
.ident form{
    display: grid;
    grid-template-columns: repeat(1);
    grid-gap: 15px;
}
.ident input{
    width: 100%;
padding: 12px 20px;
margin: 8px 0;
display: inline-block;
border: 1px solid #ccc;
border-radius: 4px;
box-sizing: border-box;
}
.ident input[type="submit"]{
    width: 100%;
background-color: #4CAF50;
color: white;
padding: 14px 20px;
margin: 8px 0;
border: none;
border-radius: 4px;
cursor: pointer;
}
.ident input[type="submit"]:hover{

    background-color: #45a049;
}